@model ADOPrac.BusinessLogicLayer.Models.Country

<h1>
	Add a country
</h1>
<form method="post" asp-action="Create" asp-controller="Country">
	<div class="mb-4">
		<input type="text" asp-for="CountryName" class="form-control" placeholder="Enter name of the country...."/>
	</div>
	<div class="mb-4">
		<input type="text" asp-for="CountryDescription" class="form-control"  placeholder="Enter description of the country...."/>
	</div>
	<input type="submit" class="btn btn-success" value="Add Country" />
</form>