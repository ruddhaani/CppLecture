
@{
    var countries = ViewData["Countries"] as List<ADOPrac.BusinessLogicLayer.Models.Country>;
}

@model ADOPrac.BusinessLogicLayer.Models.State

<h1>Update State</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Update" asp-controller="State">
            <input type="text" asp-for="StateId" class="form-control mb-3" readonly />
            @* <br /> *@
            <input type="text" class="form-control mb-3" asp-for="StateName" />
            @* <br /> *@
            <input type="text" class="form-control mb-3" asp-for="StateDescription" />

            <select class="form-control mb-3" asp-for="CountryId">
                <option value="">Select a Country</option>
                @if (countries != null)
                {
                    @foreach (var country in countries)
                    {
                        <option value="@country.CountryId" selected="@(country.CountryId == Model.CountryId ? "selected" : null)">@country.CountryName</option>
                    }
                }
            </select>

            <input type="submit" value="Update State" class="btn btn-success" />
        </form>
    </div>
</div>


